primary-color = #4b6ea8
secondary-color = #ffffff
primary-border-color = #d6d6d6
events-background = #ececec

container-height = 720px
container-padding = 0 10px
container-width = 600px

event-left-border = primary-color solid 4px
event-location-color = #797979

time-background = transparent
time-width = 100px

overflow-hidden()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

html
  box-sizing border-box
  position relative
  font-size 62.5%

body
  position relative

*, *:before, *:after
  box-sizing inherit

.calendar-container
  border 1px dashed rgba(0, 0, 0, 0.2)
  display block
  margin 0 auto
  position relative

.day-view
  display block
  margin 0 auto
  padding 10px
  position relative

  .calendar-time
    background time-background
    display inline-block
    height container-height
    position relative
    width time-width

  .calendar-events
    background events-background
    border-left 1px solid primary-border-color
    box-sizing content-box
    display inline-block
    height container-height
    margin 0 auto
    overflow hidden
    padding container-padding
    position relative
    width container-width

    .event
      background secondary-color
      border-left event-left-border
      border-radius 2px
      box-sizing border-box
      height 250px
      overflow hidden
      position relative
      width 100%

      .name
        color primary-color
        font-size 2rem
        margin-bottom 3px
        overflow-hidden()

      .location
        color event-location-color
        font-size 1.5rem
        overflow-hidden()

    .event-inner
      border-bottom 1px solid primary-border-color
      border-right 1px solid primary-border-color
      border-top 1px solid primary-border-color
      height 100%
      width 100%
      padding 10px
